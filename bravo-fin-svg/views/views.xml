<odoo>
  <data>
      
    <!-- Vista principal del modulo -->
    <record id="bravoFinSaving" model="ir.actions.act_window">
        <field name="name">Captaciones</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bf.savings</field>
        <field name="view_mode">tree,form,graph,kanban,pivot</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Crear una nueva cuenta, el primer paso para tu negocio!
          </p><p>
            <!-- Once the quotation is confirmed by the customer, it becomes a sales order.<br/> You will be able to create an invoice and collect the payment. -->
          </p>
        </field>
    </record>


    <record model="ir.ui.view" id="data_tpoperation_tree">
      <field name="name">data.tpoperation.tree</field>
      <field name="model">bf.svg.tp_operation</field>
      <field name="arch" type="xml">
        <tree string="Tree name">
          <field name="id"/>
          <field name="description"/>
          <field name="create_date" string="Fecha de creación"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="data_tpoperation_form">
      <field name="name">data.tpoperation.form</field>
      <field name="model">bf.svg.tp_operation</field>
      <field name="arch" type="xml">
        <form string="Form View name">
          <sheet>
            <group>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <record model="ir.actions.act_window" id="data_tpoperation">
      <field name="name">Mantenimiento de tipos de operación</field>
      <field name="res_model">bf.svg.tp_operation</field>
      <field name="view_mode">list,form</field>
    </record>



    <!-- Opcion en menu principal -->
    <menuitem name="Captaciones" id="action_menu" parent="" action="bravoFinSaving" sequence="1"/>

    <!-- Menu dentro del module -->
    <menuitem name="Mantenimientos" id="action_menu_1" parent="bravo-fin-svg.action_menu" action="" sequence="1"/>

    <!-- Sub Menu dentro del module -->
    <menuitem name="Tipos de operación" id="action_sub_menu_1" parent="bravo-fin-svg.action_menu_1" action="data_tpoperation" sequence="1"/>

  </data>
</odoo>